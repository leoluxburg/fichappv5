<br>
<div class="container">
  <div class="jumbotron" style="background-color: white;">
    <div class="">
      <div class="text-center">
       <h1><i class="fas fa-mountain"></i></h1>
       <h2>RURAL</h2>
       <h4>Fichas Registradas</h4>
     </div>
    <br>
     <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Numero de Lote</th>
            <th scope="col"><i class="fas fa-eye"></i></th>
            <th scope="col"><i class="fas fa-pencil-alt"></i></th>
            <th scope="col"><i class="fas fa-trash-alt"></i></th>
          </tr>
        </thead>

        <tbody>
          <% @rurals.each do |rural| %>
          <tr>
            <th scope="row"><%= rural.n_predio %></th>
            <td style="border-color: white;"><%= link_to 'Ver', rural %></td>
            <td style="border-color: white;"><%= link_to 'Editar', edit_rural_path(rural) %></td>
            <td style="border-color: white;"><%= link_to 'Eliminar', rural, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>
    <div class="text-center">
      <%= link_to 'Registar', new_rural_path, class: 'btn btn-fichapp' %>
    </div>
  </div>
</div>
</div>
